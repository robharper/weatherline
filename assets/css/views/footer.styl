footer {
  -webkit-transition: all ease 0.5s;
  background: transparent;

  .reveal {
    font-size: 2.5rem;
    text-align: center;
    padding: 5px 0;
    span {
      display: inline-block;
      -webkit-transition: -webkit-transform ease 0.1s;
    }
  }
  .toolbar {
    text-align: center;
    span {
      display: inline-block;
      width: 7rem;
      font-size: 4rem;
    }
  }

  &.open {
    .reveal span {
      -webkit-transform: rotate(180deg);
    }
  }
}

.day {
  footer.open {
    background: rgba(255,255,255,0.3);
    box-shadow: 0px -2px 3px rgba(255,255,255,0.3);
  }
}

.night {
  footer.open {
    background: rgba(60,60,70,0.5);
    box-shadow: 0px -2px 3px rgba(60,60,70,0.5);
  }
}